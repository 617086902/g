@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" />
    <title>一股一十 - 交流、讨论和学习炒股经验</title>
    <meta name="description" content="股民交流炒股经验和讨论个股的社区，学习炒股知识、提高炒股技能，寻找真正的炒股高手。" />
    <link href="~/Content/bootstrap-3.3.5-dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/form-wrapper.css" rel="stylesheet" />
</head>
<body>
    <form>
        @*step01*@
        <div class="container" style="max-width:330px;">
            <div class="form-group">
                <div style="text-align:center;">
                    <h1 class="logo">一股一十</h1>
                    <h2 class="h2">十年炒股两茫茫，不思量，自难忘</h2>
                </div>
            </div>
            <div class="form-group">
                <div style="text-align:center;">
                    <a href="regist" style="color:gray;font-size: 18px;">注册</a>
                    <a href="javascript:;" style="font-size: 18px;margin-left:20px;">登录</a>
                </div>
            </div>
            <div class="form-group">
                <input type="tel" class="form-control" id="logincode" placeholder="手机号或邮箱">
            </div>
            <div class="form-group">
                <input type="password" class="form-control" id="passCode" placeholder="密码（不少于6位）" maxlength="20">
            </div>
            <div class="form-group" style="position:relative;">
                <input type="text" class="form-control" maxlength="4" id="validCode" placeholder="验证码">
                <img class="img-thumbnail" id="changeImg" src="@Url.Action("GetCodeImg", "Common")?t=@DateTime.Now.Ticks" style="position:absolute;top:5px;right:5px;" title="看不清，点击换一张" />
            </div>
            <div class="form-group">
                <button type="button" class="btn btn-info btn-lg btn-block" id="ensureLogin">登陆</button>
            </div>
            <div class="form-group">
                <input type="checkbox" id="remeberme" checked="checked" /><span>记住我</span>
                <a href="javascriptt:;" style="float:right;">无法登陆？</a>
            </div>
            <div class="form-group">
                <span>社交账号登陆：</span><a href="/qq/login" id="qqlogin"><img src="~/Content/img/Connect_logo_1.png" /></a>
            </div>
            <br />
        </div>
    </form>
    <footer class="hidden-xs" style="text-align:center;">
        <span>&copy;2016<a href="http://www.nichaogu.com/">一股一十</a> · </span>
        <span><a href="http://www.miibeian.gov.cn/" target="_blank">京ICP备14039095号-4</a></span>
    </footer>
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/Utilities.js"></script>
    <script src="~/Scripts/login.js"></script>
</body>
</html>