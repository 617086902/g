@using Core.Entities;
@{
    GuModel.Stock stock = ViewBag.Stock;
    ViewBag.Title = stock.StockName + "(" + stock.StockCode + ")" + "股吧_股民交流社区_一股一十";
    ViewBag.Keywords = stock.StockName + "股吧" + ";" + stock.StockCode + "股吧;" + stock.StockName + "(" + stock.StockCode + ")" + "股票交流讨论社区";
    ViewBag.Description = stock.StockName + "(" + stock.StockCode + ")" + "股吧，股民交流炒股经验和讨论个股的社区，学习炒股知识、提高炒股技能，寻找真正的炒股高手。";
    ViewBag.h = stock.StockName + "吧";
    BaseUser user = Core.AppContext.Current.CurrentUser;
    bool isLogin = user != null;
    CommonService.Stocks.SinaStockData ssd = ViewBag.StockData as CommonService.Stocks.SinaStockData;
    <link href="~/Content/umeditor1_2_2-utf8-net/themes/default/css/umeditor.css" type="text/css" rel="stylesheet">
    <link href="~/Content/css/guba.css" type="text/css" rel="stylesheet" />
}
@model BusinessService.Entities.PostListModel
<hr class="visible-xs" />
<div style="border-bottom:1px solid #eee;">
    <a class="bartop" href="/guba/@stock.StockCode">@ViewBag.h</a>
    <span style="margin-right:30px;">
        &nbsp;&nbsp;@stock.StockCode
    </span>
    <input type="hidden" value="@stock.StockCode" id="stockCode" />
    <div class="visible-xs"></div>
    <span style="font-size:13px;color:gray;">
        @if (ssd != null)
            {
            <span>当前价格：@ssd.currentPrice &nbsp;</span>
                <span>涨跌幅：@ssd.increase &nbsp;</span>
                <span>成交量：@ssd.totalNumber &nbsp;</span>
                <span>成交额：@ssd.turnover &nbsp;</span>
                <span>开盘价：@ssd.openningPrice &nbsp;</span>
                @*<span>昨日收盘价：@ssd.closingPrice</span>*@
        }
    </span>
</div>
<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-9" style="border-right:1px solid #eee;">
        <br />
        <div id="postlist">
            @if (!Model.PostData.Any())
            {
                <div style="margin-bottom:20px;line-height:50px;margin-left:10px;">暂无数据，赶紧抢做第一个发帖人吧！</div>
            }
            @foreach (var post in Model.PostData)
            {
                <div class="row post-list">
                    <div class="col-xs-12 col-sm-1">
                        <div class="hidden-xs commont-count">@post.CommontCount</div>
                        <div class="visible-xs">
                            <img src="@post.ProfilePhoto" alt="profilephoto" class="img-thumbnail profilephoto">
                            <span class="x-span">
                                @post.UserName
                                <span style="float:right;" class="visible-xs x-commont-count">评论 @post.CommontCount</span><br />
                                <span style="color:#ccc;">@post.ShowTime</span>
                            </span>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-11">
                        <div class="post-title">
                            <a href="/p/@post.Post.Id">@post.Post.Title</a>
                            <span class="hidden-xs">@post.UserName&nbsp;&nbsp;&nbsp;@post.ShowTime</span>
                        </div>
                        <div class="post-content">@post.Post.Content</div>
                    </div>
                </div>
                <hr />
            }
        </div>
        <div id="pager">
            @Html.Raw(ViewBag.Pager)
        </div>
        <div class="form-group">
            <label>发表新帖</label><br />
            <input type="text" class="form-control" placeholder="请填写标题" id="posttitle" maxlength="35" style="margin-bottom:10px;width:99%;">
            <textarea id="posteditor" style="width:100%;height:150px;"></textarea><br />
            @if (isLogin)
            {
                <button type="button" class="btn btn-default" id="postsubmit">发表</button>
            }
            else
            {
                <a href="/user/login?redirectURL=/guba/@stock.StockCode" class="btn btn-default">请先登录</a>
            }
        </div>
    </div>
    <div class="hidden-xs col-md-3">
        <div>
            @if (ssd != null)
            {
                <div style="line-height:40px;font-size:18px;">
                    <span>最新行情</span>
                </div>
                <img style="max-width:90%;" class="img-thumbnail" src="@ssd.chatMin" alt="@ssd.name 分时线" />
            }
        </div>
        @Html.Partial("_HotPost")
    </div>
</div>
<script type="text/javascript" charset="utf-8" src="~/Content/umeditor1_2_2-utf8-net/umeditor.config.js"></script>
<script type="text/javascript" charset="utf-8" src="~/Content/umeditor1_2_2-utf8-net/umeditor.min.js"></script>
<script type="text/javascript" src="~/Content/umeditor1_2_2-utf8-net/lang/zh-cn/zh-cn.js"></script>
<script src="~/Scripts/jsrender.min.js"></script>
<script src="~/Scripts/guba.js"></script>